erDiagram
    Users {
        int user_id PK
        string username
        string password_hash
        string email
        string role "Admin/Staff"
    }

    Sites {
        int site_id PK
        string site_name
        string address
    }

    VehicleTypes {
        int type_id PK
        string type_name "LWB transit, Luton, HGV"
        int max_weight
        int max_space
    }

    Vehicles {
        int vehicle_id PK
        string registration_number
        int type_id FK
        int home_site_id FK
    }

    Goods {
        int good_id PK
        string name
        int unit_weight
        int unit_size
        boolean is_hazardous
    }

    Jobs {
        int job_id PK
        int good_id FK
        int quantity
        date start_date
        date deadline_date
        date completed_date
        int source_site_id FK
        int dest_site_id FK
        int assigned_vehicle_id FK
        enum status "Outstanding, In Progress, Completed"
    }

    Sites ||--o{ Vehicles : "bases"
    Sites ||--o{ Jobs : "originates/receives"
    VehicleTypes ||--o{ Vehicles : "defines"
    Vehicles ||--o{ Jobs : "delivers"
    Goods ||--o{ Jobs : "comprises"